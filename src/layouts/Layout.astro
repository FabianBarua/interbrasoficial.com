  html,
  body {
    -ms-overflow-style: none; /* IE y Edge */
    scrollbar-width: none; /* Firefox */
  }

  html::-webkit-scrollbar,
  body::-webkit-scrollbar {
    display: none; /* Chrome, Safari y Opera */
  }

  .hideScrollBar {
    -ms-overflow-style: none; /* IE y Edge */
    scrollbar-width: none; /* Firefox */
  }
  .hideScrollBar::-webkit-scrollbar {
    display: none; /* Chrome, Safari y Opera */
  }

  .mask {
    mask-image: linear-gradient(transparent 10%, black 100%);
  }

  .mask-loader {
    mask-image: linear-gradient(transparent 0%, black 80%);
  }

  .no-select {
    -webkit-user-select: none; /* Safari */
    -moz-user-select: none; /* Firefox */
    -ms-user-select: none; /* IE 10+ y Edge */
    user-select: none; /* Standard syntax */
  }

  .doublemask {
    mask-image: linear-gradient(
      90deg,
      transparent 0%,
      black 20%,
      black 80%,
      transparent 100%
    );
  }
  
  .mask-bottom {
    mask-image: linear-gradient(
      transparent 0%,
      black 20%,
      transparent 100%
    );
    mask-position: bottom;
    mask-size: cover;
  }

  .shadow-custom {
    box-shadow: 0 0 50px 0 rgba(0, 0, 0, 0.415);
  }

  ::view-transition-group(background) {
    animation-fill-mode: both;
    z-index: 10;
  }

  /* Loader personalizado para ViewTransitions */
  #page-loader {
    position: fixed;
    top: 2rem;
    right: 2rem;
    background-color: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(4px);
    border-radius: 12px;
    padding: 1rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    border: 1px solid rgba(16, 185, 129, 0.2);
  }

  #page-loader.active {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .loader-content {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .loader-logo {
    color: #10b981; /* interbrasGreen-500 */
    width: 60px;
    height: auto;
    animation: logoFade 2s ease-in-out infinite alternate;
  }

  .loader-spinner {
    width: 2px;
    height: 2px;
    border-radius: 50%;
    background-color: #10b981;
    box-shadow: 
      0 0 0 0 rgba(16, 185, 129, 0.8),
      6px 0 0 0 rgba(16, 185, 129, 0.6),
      12px 0 0 0 rgba(16, 185, 129, 0.4),
      18px 0 0 0 rgba(16, 185, 129, 0.2);
    animation: loaderDots 1.2s infinite linear;
  }

  @keyframes logoFade {
    0% {
      opacity: 0.7;
    }
    100% {
      opacity: 1;
    }
  }

  @keyframes loaderDots {
    0% {
      box-shadow: 
        0 0 0 0 rgba(16, 185, 129, 0.8),
        6px 0 0 0 rgba(16, 185, 129, 0.6),
        12px 0 0 0 rgba(16, 185, 129, 0.4),
        18px 0 0 0 rgba(16, 185, 129, 0.2);
    }
    25% {
      box-shadow: 
        -6px 0 0 0 rgba(16, 185, 129, 0.2),
        0 0 0 0 rgba(16, 185, 129, 0.8),
        6px 0 0 0 rgba(16, 185, 129, 0.6),
        12px 0 0 0 rgba(16, 185, 129, 0.4);
    }
    50% {
      box-shadow: 
        -12px 0 0 0 rgba(16, 185, 129, 0.4),
        -6px 0 0 0 rgba(16, 185, 129, 0.2),
        0 0 0 0 rgba(16, 185, 129, 0.8),
        6px 0 0 0 rgba(16, 185, 129, 0.6);
    }
    75% {
      box-shadow: 
        -18px 0 0 0 rgba(16, 185, 129, 0.6),
        -12px 0 0 0 rgba(16, 185, 129, 0.4),
        -6px 0 0 0 rgba(16, 185, 129, 0.2),
        0 0 0 0 rgba(16, 185, 129, 0.8);
    }
    100% {
      box-shadow: 
        0 0 0 0 rgba(16, 185, 129, 0.8),
        6px 0 0 0 rgba(16, 185, 129, 0.6),
        12px 0 0 0 rgba(16, 185, 129, 0.4),
        18px 0 0 0 rgba(16, 185, 129, 0.2);
    }
  }

  .fadeIn {
    animation: fadeIn 0.5s ease-in-out forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fadeOut {
    animation: fadeOut 0.5s ease-in-out forwards;
  }

  @keyframes fadeOut {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
    }
  }

